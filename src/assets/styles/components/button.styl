.btn
  width 150px
  height 58px
  display inline-flex
  align-items center
  justify-content center
  border-radius 8px
  text-transform uppercase 
  font font-btn
  cursor pointer
  @media screen and (min-width: 768px)
    width 175px

.btn--orange
  @extend .btn
  color color-white
  background color-orange
  &:hover
    background color-orange-light
.btn--gray
  @extend .btn
  color color-blue
  background color-gray
  &:hover
    color color-white
    background color-blue


