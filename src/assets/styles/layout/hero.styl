.hero
  margin-top margin-vertical * 2
  overflow hidden
  &__headline
    margin-bottom margin-vertical * 2
    padding 0 (px-unit * 5)
  &__title
    font-size 46px
    margin-top 0
    margin-bottom 32px
    @media screen and (min-width: 1100px)
      font-size 56px
  &__cta
    display flex
    // justify-content space-between
    align-items center
  &__btn + &__release
    margin-left 32px
  &__release
    text-transform uppercase
    font-weight font-weight-bold
  &__row
    width 100%
    &.row-2
      display flex
      flex-wrap wrap
      justify-content space-around
      margin-top 24px


  &__img
    overflow hidden
    border-radius 20px
    flex-shrink 1
    flex-grow 1
    flex-basis 33%
    @media screen and (min-width: 768px)
      flex-basis auto

    
    &[data-img="keyboard"]
      width 372px
      height 331px
      transform translateX(21px)
      flex-shrink 0
    &[data-img="keyboard-and-phone"]
      max-width 129px
      max-height 193px
      background-color color-orange
      transform translateX(-21px)
      @media screen and (min-width: 768px)
        max-width initial
        max-height initial

      & .img
        opacity .75
        mix-blend-mode multiply
        // isolation isolate
    &[data-img="keyboard-and-glass"]
      max-width 220px
      max-height 193px
      margin-right 24px
      @media screen and (min-width: 768px)
        max-width initial
        max-height initial
      & .img
        object-fit cover
    
  &__subheadline
    width 375px
    flex-basis auto
    flex-grow 2
    padding 0 box-padding
    text-align center
    margin-top 75px
  &__subtitle
    width 255px
    // margin (margin-vertical *2) auto 26px
    margin auto
