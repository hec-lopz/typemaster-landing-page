.header
  display flex
  justify-content space-between
  align-items center
  padding 0 (px-unit * 5)
  padding-top (px-unit * 5)
  min-width 320px
  margin auto
  @media screen and (min-width: 768px)
    padding-top 40px
    padding-right 0
    max-width 768px
  @media screen and (min-width: 1100px)
    padding-top 55px
    padding-right 25px
    max-width desktop-max-width

  &__logo
    height 40px

